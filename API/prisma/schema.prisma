generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id   Int    @id @default(autoincrement())
  name String
  time Int
}

model Image {
  id         Int         @id @default(autoincrement())
  name       String
  characters Character[]
}

model Character {
  id        Int    @id @default(autoincrement())
  name      String
  x         Int
  y         Int
  tolerance Int
  imageId   Int
  image     Image  @relation(fields: [imageId], references: [id])

  @@unique([name, imageId])
}
